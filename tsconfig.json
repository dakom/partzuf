{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist/typings",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "diagnostics": true,
        "outDir": "dist",
        "jsx": "react",
        "lib": [
            "es6",
            "es5",
            "dom"
        ]
    },
    "files": [
        "./src/lib/lib.ts"
    ],
    "include": [
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}
